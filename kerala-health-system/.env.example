# Environment Configuration
NODE_ENV=development
PORT=4000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kerala_health
DB_USER=postgres
DB_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/kerala_health

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production

# MinIO Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=kerala-health-attachments

# Redis
REDIS_URL=redis://localhost:6379

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ABHA Integration (Mock)
ABHA_BASE_URL=https://dev.abdm.gov.in
ABHA_CLIENT_ID=your-abha-client-id
ABHA_CLIENT_SECRET=your-abha-client-secret

# Government APIs
KERALA_GOVT_API_KEY=placeholder-for-kerala-api
IDSP_API_ENDPOINT=https://idsp.mohfw.gov.in/api
IDSP_API_KEY=placeholder-for-idsp-api

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics & ML
ENABLE_ANALYTICS=true
ML_MODEL_PATH=./models/
ALERT_THRESHOLD=10

# Audit & Blockchain
AUDIT_ENABLED=true
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NETWORK=ethereum-testnet

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3000/admin

# File Upload Limits
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx