{
  "name": "kerala-health-backend",
  "version": "1.0.0",
  "description": "Backend API for Kerala Digital Health Record Management System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "npx prisma migrate deploy",
    "seed": "ts-node src/scripts/seed.ts",
    "generate": "npx prisma generate"
  },
  "keywords": [
    "healthcare",
    "fhir",
    "kerala",
    "digital-health",
    "migrant-workers"
  ],
  "author": "Kerala Health Department",
  "license": "Government",
